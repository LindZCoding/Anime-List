<h2><%= currentUser.name %>'s Profile</h2>
<h3>
    Favorite Anime's Watched:
</h3>

<%if(results === undefined) {%>
    <h3>No Favorites Found</h3>
<%} else {%>
    <ul>
        <%results.forEach(function(result) {%>
            <li>
                <a href="/anime/<%=result.animeId%>">
                    <%=result.name%>
                </a>
            </li>
            <%})%>
    </ul>
<%}%> 
<br> <br>

<h3>
Favorite Characters:
</h3>
<%if(characterResults === undefined) {%>
    <h3>No Favorites Found</h3>
<%} else {%>
    <ul>
        <%characterResults.forEach(function(result) {%>
            <li>
                <a href="/character/<%=result.mal_id%>">
                    <%=result.name%>
                </a>
            </li>
            <%})%>
    </ul>
<%}%>